<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IU.StoredSurveys.StoredSurveys">
    <RelativeLayout
        android:id="@+id/relative_stored_surveys"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_stored_surveys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/datequestion1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="12dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/example_date"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/style_recycler_dates"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/datequestion2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="12dp"
                    android:text="@string/example_date"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/style_recycler_dates"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/datequestion1" />

                <TextView
                    android:id="@+id/datequestion3"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="12dp"
                    android:text="@string/example_date"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/style_recycler_dates"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/datequestion2" />
                <!-- <androidx.recyclerview.widget.RecyclerView
                     android:id="@+id/recycler_stored_surveys"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     tools:listitem="@layout/cardview_stored_surveys">
                 </androidx.recyclerview.widget.RecyclerView> -->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/btnVolverMenu"
                    android:layout_width="375dp"
                    android:layout_height="74dp"
                    android:layout_margin="50dp"
                    android:background="@drawable/style_border"
                    android:gravity="center"
                    android:text="@string/back_button"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>